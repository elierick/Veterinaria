<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".ui.general.ConsejosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnpulgas"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="236dp"
            android:text="Pulgas y garrapatas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <Button
            android:id="@+id/btnesteri"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="196dp"
            android:text="Esterilizacion"
            app:layout_constraintStart_toStartOf="@+id/btnpulgas"
            app:layout_constraintTop_toTopOf="@+id/btnpulgas" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="423dp"
            android:layout_height="222dp"
            android:src="@drawable/consejoscab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".ui.general.ConsejosFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="447dp"
            android:layout_height="194dp"
            android:src="@drawable/encconsejos"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/consejo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnpulgas"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="228dp"
            android:text="Pulgas y garrapatas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <Button
            android:id="@+id/btnesteri"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="196dp"
            android:text="Esterilizacion"
            app:layout_constraintStart_toStartOf="@+id/btnpulgas"
            app:layout_constraintTop_toTopOf="@+id/btnpulgas" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>